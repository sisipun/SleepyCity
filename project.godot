; Engine configuration file.
; It's best edited using the editor UI and not directly,
; since the parameters that go here are not all obvious.
;
; Format:
;   [section] ; section goes between []
;   param=value ; assign values to parameters

config_version=5

[application]

config/name="Sleepy City"
run/main_scene="res://script/level.tscn"
config/features=PackedStringArray("4.0")
boot_splash/bg_color=Color(1, 1, 1, 1)
boot_splash/image="res://asset/launch/launch.png"
config/icon="res://asset/incon/icon180x180.png"

[audio]

buses/default_bus_layout="res://asset/common/default_bus_layout.tres"

[autoload]

EventStorage="*res://script/common/storage/event_storage.gd"
GameStorage="*res://script/common/storage/game_storage.gd"
LevelController="res://script/common/controller/level_controller.tscn"
TipController="res://script/common/controller/tip_controller.gd"
AudioController="res://script/common/controller/audio_controller.gd"
BackgroundMusicController="res://script/common/controller/background_music_controller.tscn"

[display]

window/size/viewport_width=500
window/size/viewport_height=1000
window/size/resizable=false
window/energy_saving/keep_screen_on=false
window/handheld/orientation="sensor_portrait"
window/stretch/mode="2d"
window/stretch/aspect="expand"

[editor_plugins]

enabled=PackedStringArray("admob")

[font]

tablet_driver=false

[gui]

theme/custom_font="res://asset/common/default.tres"

[input_devices]

pointing/emulate_touch_from_mouse=true

[rendering]

vram_compression/import_etc=true
vram_compression/import_pvrtc=true
